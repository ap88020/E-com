<%- include('./partials/header') %>
<div class="w-full min-h-screen px-20 py-20">
    <h2 class="text-2xl font-semibold mb-5">Your Cart</h2>

    <% 
        let totalMRP = 0;
        let platformFee = 20; // Fixed Platform Fee
        let shippingFee = 0;  // Free Shipping

        user.cart.forEach(item => { 
            totalMRP += Number(item.price); // Convert price to number
        });

        let totalAmount = totalMRP + platformFee + shippingFee;
    %>

    <div class="flex justify-between">
        <div class="flex flex-wrap gap-10 w-[65%]">
            <% user.cart.forEach(item => { %> 
            <div class="w-[45%] rounded-md overflow-hidden border border-gray-300 shadow-lg">
                <div class="w-full h-80 bg-gray-200 flex justify-center items-center">
                    <img src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>" class="w-full h-full object-cover">
                </div>
                <div class="w-full flex justify-between px-5 py-4 bg-blue-200">
                    <h3 class="text-lg font-semibold"><%= item.name %></h3>
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line cursor-pointer"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line cursor-pointer"></i>
                    </div>
                </div>
                <div class="flex items-center justify-between px-5 py-3 bg-gray-400">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg font-semibold">₹ <%= item.price %></h2>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Price Breakdown Section (Fixed to Right Side) -->
        <div class="w-[30%] border border-gray-300 p-5 shadow-lg h-fit">
            <h3 class="text-xl font-semibold">Price Breakdown</h3>
            <div class="mt-5 space-y-3">
                <div class="flex justify-between">
                    <h4>Total MRP</h4>
                    <h4>₹ <%= totalMRP %></h4>
                </div>
                <div class="flex justify-between">
                    <h4>Discount on MRP</h4>
                    <h4>₹ 0</h4>
                </div>
                <div class="flex justify-between">
                    <h4>Platform Fee</h4>
                    <h4>₹ <%= platformFee %></h4>
                </div>
                <div class="flex justify-between">
                    <h4>Shipping Fee</h4>
                    <h4 class="text-green-600">FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-5"></div>
            <div class="flex justify-between mt-5">
                <h3 class="text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= totalAmount %></h3>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>
